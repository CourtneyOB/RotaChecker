@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Create Shift Templates</h1>
</div>

<div class="container">
    <form method="post">
        <label for="type">Work Duty Type:</label>
        <select name="type">
            <option value="shift">Shift</option>
            <option value="onCall">On Call Period</option>
        </select>
        <br />
        <label for="templateName">Name:</label>
        <input name="templateName" type="text" value="Template Name" />
        <br />
        <label for="length">Length (Hours):</label>
        <input name="length" type="number" step="0.01" value="" />
        <br />
        <label for="expectedHours">Expected Hours:</label>
        <input name="expectedHours" type="number" step="0.01" value="" />
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@foreach (var item in Model.Templates)
{
    <p>@item.Name</p>
    <p>@item.Length</p>
}



